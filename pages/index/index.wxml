<view>
  <view class="sendmessage">
    <input id="message" bindinput="bindChange" 
    value='{{message}}' focus="{{message_focus}}"></input>
    <button bindtap="add">发送</button>
  </view>
</view> 
<view class="historycon" >
<scroll-view scroll-y="true" class="history">
  <text>{{text}}</text>
</scroll-view>
</view>